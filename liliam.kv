<CriarContaWindow>
    name: "create"

    nome: nome
    email: email
    senha: senha

    FloatLayout:
        cols:1

        Image:
            source: "imagens/logo.png"
            size_hint: 1,1
            height: 300
            allow_stretch: True

        FloatLayout:
            size: root.width/2, root.height

            Label:
                text: "Criar uma Conta"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1.07}
                font_size: (root.width**2 + root.height**2)/13**4
            
            Label:
                size_hint: 0.5, 0.1
                pos_hint: {"x":0, "top":0.9}
                text: "Nome de Usuário: "
                font_size: (root.width**2 + root.height**2)/13**4

            TextInput:
                pos_hint:{"x":0.45, "top":0.88}
                size_hint: 0.5, 0.05
                id: nome
                multiline: False
                font_size: (root.width**2 + root.height**2) / 13**4

            Label:
                size_hint: 0.5, 0.1
                pos_hint: {"x":0, "top":0.8}
                text: "Email: "
                font_size: (root.width**2 + root.height**2)/13**4

            TextInput:
                pos_hint:{"x":0.45, "top":0.78}
                size_hint: 0.5, 0.05
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 13**4

            Label:
                size_hint: 0.5, 0.1
                pos_hint: {"x":0, "top":0.7}
                text: "Senha: "
                font_size: (root.width**2 + root.height**2)/13**4

            TextInput:
                pos_hint:{"x":0.45, "top":0.68}
                size_hint: 0.5, 0.05
                id: senha
                multiline: False
                font_size: (root.width**2 + root.height**2) / 13**4

        Button:
            pos_hint:{"x":0.2, "y":0.15}
            size_hint: 0.6, 0.05
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Você já possui uma conta? Faça o Login"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.1, "y":0.55}
            size_hint: 0.8, 0.06
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Enviar"
            on_release:
                root.manager.transition.direction = "left"
                root.enviar()

<LoginWindow>
    name: "login"
    
    email: email
    senha: senha

    FloatLayout:

        Label:
            text: "Login"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1.07}
            font_size: (root.width**2 + root.height**2)/13**4

        Image:
            source: "imagens/logo.png"
            size_hint: 0.8,1.6
            height: 300
            allow_stretch: True

        TextInput:
            id: email
            hint_text: "Nome de usuário ou Email"
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.2, "top": 0.55}
            size_hint: 0.6, 0.06

        TextInput:
            id: senha
            hint_text: "Senha"
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            senha: True
            pos_hint: {"x": 0.2, "top": 0.48}
            size_hint: 0.6, 0.06    

        Button:
            pos_hint:{"x":0.35,"y":0.3}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.25,"y":0.2}
            size_hint: 0.5, 0.05
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Você não possui uma conta? Cadastre-se"
            on_release:
                root.manager.transition.direction = "right"
                root.criarBtn()

<MainWindow>
    n: n
    email: email
    created: created
    rt: rt

    FloatLayout:

        Image:
            source: "imagens/logo.png"
            size_hint: 0.8,1.6
            height: 300
            allow_stretch: True

        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint: 0.8, 0.2
            text: "Nome de Usuário: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.6}
            size_hint: 0.8, 0.2
            text: "Email: "
        
        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint: 0.8, 0.2
            text: "Criado em: "

        Label:
            id: rt
            pos_hint:{"x": 0.1, "top":0.4}
            size_hint: 0.8, 0.2
            text: ""

        Button:
            pos_hint:{"x": 0.75, "y":0.05}
            size_hint: 0.2,0.05
            text: "Executar"
            on_release:
                root.executarBtn()
                root.manager.transition.direction = "right"
            
        Button:
            pos_hint:{"x": 0.05, "y":0.05}
            size_hint: 0.2,0.05
            text: "Sair"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"